<h1>Payments</h1>

<table id="payments">
  <thead>
    <tr>
      <th>Date</th>
      <th>Project</th>
      <th>Payments due</th>
    </tr>
  </thead>
  <tbody>

  <% @projects.each do |project| %>
    <tr>
      <td><%= project.payment_date %></td>
      <td><%= project.title %></td>
      <td>
        <%= project.applicants.approved.pluck(:name).compact.join(', ') %>
      </td>
    </tr>
  <% end %>
  </tbody>
</table>
